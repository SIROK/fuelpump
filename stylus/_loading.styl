/**
 * Spinner bounce
 *
 * @Description
 * It is for small object such as button or a tag
 *
 * @Example
 * <div class="spinner">
 *   <div class="bounce1"></div>
 *   <div class="bounce2"></div>
 *   <div class="bounce3"></div>
 * </div>
 *
 * @Codepen
 * http://codepen.io/fuelpump/pen/QyVqZp
 */
.spinner {
  text-align: center;
}

.spinner > div {
  width: 18px;
  height: 18px;
  background-color: #333;

  border-radius: 100%;
  display: inline-block;
  animation: bounceDelay 1.4s infinite ease-in-out both;
}

.spinner > .bounce1 {
  animation-delay: -0.32s;
}

.spinner > .bounce2 {
  animation-delay: -0.16s;
}

.spinner > .bounce3 {
  position: relative;
}

@keyframes bounceDelay {
  0%, 80%, 100% {
    transform: scale(0);
  } 40% {
    transform: scale(1.0);
  }
}
