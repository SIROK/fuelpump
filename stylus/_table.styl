[am-table]
  width: 100%
  th
  td
    padding: 12px

  thead tr
    text-align: left
    border-bottom: 2px solid brand-color

  tbody tr
    border-bottom: 1px solid #ccc
    cursor: pointer
    &:hover
      background: rgba(200, 250, 255, .1)
      td:first-child
        box-shadow: inset 2px 0 #71a6f6
