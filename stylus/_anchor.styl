/*------------------------------------*\
    $ANCHOR
\*------------------------------------*/
a
  background-image: linear-gradient(to bottom,rgba(0, 0, 0, 0) 50%,lighten(color-anchor,20%) 50%);
  background-position: 0 93%;
  background-repeat: repeat-x;
  background-size: 100% 0.15rem;
  text-shadow: 0.1rem 0 color-anchor-background,0.15rem 0 color-anchor-background,-0.1rem 0 color-anchor-background,-0.15rem 0 color-anchor-background;

a:hover,
a:active,
a:focus
  background-image: linear-gradient(to bottom,rgba(0, 0, 0, 0) 50%,lighten(color-anchor-hover,20%) 50%);
