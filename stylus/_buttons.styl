/*------------------------------------*\
    $BUTTON
\*------------------------------------*/





/*------------------------------------*\
    #BASE
\*------------------------------------*/
/**
 *
  <button am-button>Button</div>
 *
 */
[am-button]
  display: inline-block;
  font-family: inherit
  position: relative
  cursor: pointer
  text-decoration: none
  white-space: nowrap
  vertical-align: middle
  margin: 0
  padding: 9px 15px
  border-radius: brand-round
  user-select: none
  appearance: none
  border: none
  box-shadow: none
  font-size: 11px
  letter-spacing: .1em

[am-button]
  &,
  &:hover
    text-decoration: none
  &:active,
  &:focus
    outline:none





/*------------------------------------*\
    #SOLID
\*------------------------------------*/
/**
 *
  <button am-button='solid'>Solid Button</button>
 */
[am-button~="solid"]
  background: #fff
  border: 1px solid brand-color
  color: brand-color
  transition: background, color, 0.8s ease
  &:hover
    background: brand-color
    color: #fff





/*------------------------------------*\
    #FILL
\*------------------------------------*/
/**
 *
  <button am-button='fill'>Solid Button</button>
 */
[am-button~="fill"]
  background: brand-color
  border: 1px solid brand-color
  color: #fff
  transition: opacity 0.8s ease;
  &:hover
    opacity: .8





/*------------------------------------*\
    #FUNCTION
\*------------------------------------*/
/**
 * Solid
 *
  <button am-butto="default:solid">Default</button>
  <button am-butto="primary:solid">Primary</button>
  <button am-butto="success:solid">Success</button>
  <button am-butto="danger:solid">Success</button>
 *
 */
/**
 * Default
 */
[am-button~="default:solid"]
  color: button-default-color
  border: 1px solid button-default-color
  &:hover
    background: button-default-color


/**
 * Primary
 */
[am-button~="primary:solid"]
  color: button-primary-color
  border: 1px solid button-primary-color
  &:hover
    background: button-primary-color


/**
 * Success
 */
[am-button~="success:solid"]
  color: button-success-color
  border: 1px solid button-success-color
  &:hover
    background: button-success-color


/**
 * Danger
 */
[am-button~="danger:solid"]
  color: button-danger-color
  border: 1px solid button-danger-color
  &:hover
    background: button-danger-color


/**
 * Fill
 *
  <button am-butto="default:fill">Default</button>
  <button am-butto="primary:fill">Primary</button>
  <button am-butto="success:fill">Success</button>
  <button am-butto="danger:fill">Success</button>
 *
 */
/**
 * Default
 */
[am-button~="default:fill"]
  background: button-default-color
  border: 1px solid button-default-color


/**
 * Primary
 */
[am-button~="primary:fill"]
  background: button-primary-color
  border: 1px solid button-primary-color


/**
 * Success
 */
[am-button~="success:fill"]
  background: button-success-color
  border: 1px solid button-success-color


/**
 * Danger
 */
[am-button~="danger:fill"]
  background: button-danger-color
  border: 1px solid button-danger-color





/*------------------------------------*\
    #STYLE
\*------------------------------------*/
/**
 * Soft
 *
  <button am-button="soft">Button</button>
 */
[am-button~="soft"]
  border-radius: 200px


/**
 * Hard
 *
  <button am-button="hard">Button</button>
 */
[am-button~="hard"]
  border-radius: 0
