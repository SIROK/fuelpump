    $DASHBOARD
\*------------------------------------*/
/**
 *
 *
  <div am-dashboard-wrapper>
    <aside am-dashboard-aside></main>
    <main am-dashboard-main></main>
  </div>
 * http://codyhouse.co/gem/secondary-expandable-navigation/
 */
[am-dashboard-wrapper]
  height: 100%


[am-dashboard-aside],
[am-dashboard-main]
  overflow: auto
  height: 100%
  max-height: 100%


[am-dashboard-aside]
  position: absolute
  // Hack:
  // iOS Safari scrolling causes HTML elements with a delay
  transform: translate3d(0,0,0)
  top: 0
  left: 0
  bottom: 0
  width: 210px


[am-dashboard-main]
  position: relative
  // Hack:
  // iOS Safari scrolling causes HTML elements with a delay
  transform: translate3d(0,0,0)
  float: right
  top: 0
  width: calc(100% - 210px)
