/**
 * Dashboard Layout
 *
 * @Example
 * <div class="dashboard">
 *   <div class="dashboard-aside"></div>
 *   <div class="dashboard-main"></div>
 * </div>
 *
 * @Codepen
 * http://codepen.io/fuelpump/pen/OMoOJb
 */
.dashboard {
  background: #4f5059;
  width: 100%;
  height: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  position: relative;
}

.dashboard-aside {
  width: 200px;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  height: 100%;
  max-height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  overflow-x: hidden;
  overflow-y: scroll;
  background: #4f5059;
}

.dashboard-main {
  margin-left: 200px;
  background: #ededed;
  display: inline-block;
  overflow-x: hidden;
  overflow-y: scroll;
  flex-grow: 1;
}
