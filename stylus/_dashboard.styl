/**
 *
 *
  <div am-dashboard-wrapper>
    <aside am-dashboard-aside></main>
    <main am-dashboard-main></main>
  </div>
 *
 */
[am-dashboard-wrapper]
  height: 100%


[am-dashboard-aside],
[am-dashboard-main]
  overflow: auto
  height: 100%
  max-height: 100%


[am-dashboard-aside]
  position: absolute
  top: 0
  left: 0
  bottom: 0
  width: 210px


[am-dashboard-main]
  position: relative
  float: right
  top: 0
  width: calc(100% - 210px)
  transition: all .3s linear


