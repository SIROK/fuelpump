/*------------------------------------*\
    #HTML
\*------------------------------------*/
html
  min-height: 100%
  size-adjust: 100%
  osx-font-smoothing: grayscale
  font-smoothing: antialiased
  font-feature-settings:"liga" on





/*------------------------------------*\
    #HTML & BODY
\*------------------------------------*/
html,
body
  height: 100%





/*------------------------------------*\
    #FONT
\*------------------------------------*/
