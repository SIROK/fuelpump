/**
 * Default buttons
 *
 * @Example
 * <button class="btn" type="button">Button button</button>
 * <a class="btn">Link button</a>
 *
 * @Demo
 *
 */
.btn {
  position: relative;
  display: inline-block;
  padding: 6px 12px;
  font-size: 13px;
  font-weight: bold;
  line-height: 20px;
  white-space: nowrap;
  vertical-align: middle;
  cursor: pointer;
  border-radius: brand-border-radius;
  user-select: none;
  background #fff;

  color: brand-color;
  border: 1px solid brand-color;

  &:hover {
    color: #fff;
    background brand-color;
  }
}


/**
 * Danger buttons
 */
.btn-danger {
  color: #E84040;
  border: 1px solid #E84040;

  &:hover {
    color: #fff;
    background #E84040;
  }
}



/**
 * Disabled Button
 *
 * @Example
 * <button class="btn disabled" type="button">Button button</button>
 * <a class="btn disabled">Link button</a>
 */
.btn-danger:disabled,
.btn-danger.disabled {
  cursor: default;
  background #efefef;
  border: 1px solid #E09D9D;
  color: #E09D9D;
}





/**
 * Small Button
 *
 * @Example
 * <button class="btn btn-s" type="button">Button button</button>
 * <a class="btn btn-s">Link button</a>
 *
 * @Demo
 *
 */
btn.btn-s {
  padding: 2px 5px;
}
