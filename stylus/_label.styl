/**
 * <div><span am-label><span></div>
 */
[am-label]
  border: 1px solid #ccc
  background: #fff
  border-radius: 3px
  width: 24px
  line-height: 24px
  display: inline-block
  height: 24px
  cursor: pointer
  text-align: center
  margin-left: 7px
  position: relative
  top: 1px

[am-label]:hover
  background: #efefef

