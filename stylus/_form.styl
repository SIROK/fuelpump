.form-text,
.form-password,
.form-email,
.form-number,
.form-tel,
.form-url,
.form-select,
.form-textarea {
  padding: 7px 8px;
  border-radius: 2px;
  font-size: 13px;
  border: 1px solid #ccc;
  color: #777;
  box-shadow: none;
  outline: none;
  min-height: 34px;
  vertical-align: middle;
  background-color: #fff;
  background-repeat: no-repeat;
  background-position: right 8px center;
}





/**
 * Custom Form Select
 *
 * @Description
 * Custom <select>s are also availableâ€”just add `.select`.
 *
 * @Example
 * <div class="select">
 *   <span class="select-placeholder" aria-haspopup="false" aria-expanded="false">
 *     Select Login Option
 *   </span>
 *   <ul class="select-menu">
 *     <li class="select-item">Facebook</li>
 *     <li class="select-item">Google</li>
 *     <li class="select-item">Email</li>
 *   </ul>
 * <div>
 *
 * @Demo
 * http://codepen.io/fuelpump/pen/ZQMXmr
 */
.select {
  position: relative;
  display: block;
  margin: 0 auto;
  width: 100%;
  max-width: 325px;
  color: #ccc;
  vertical-align: middle;
  text-align: left;
  user-select: none;
  -webkit-touch-callout: none;
}

.select-placeholder {
  position: relative;
  display: block;
  border: 1px solid #ccc;
  background: #fff;
  z-index: 1;
  padding: 0.8em 1em 0.8em 1em;
  border-radius: 2px;
  cursor: pointer;
  font-family: sans-serif;
  font-size: 13px;
  color: #777;

  &:hover {
    opacity: .8;
  }

  &:after {
    content: '';
    border-width: 8px 5px 0;
    border-style: solid;
    border-top-color: #ccc;
    border-right-color: transparent;
    border-left-color: transparent;
    border-bottom-color: transparent;
    position: absolute;
    right: 1em;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
  }
}

.select-menu {
  margin: 0;
  padding: 0;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  background: #fff;
  border-radius: 2px;
  list-style: none;
  z-index: 100;
  background #fff;
  border: 1px solid #ccc;
  overflow-y: auto;
  overflow-x: hidden;
}

.select-item {
  display: block;
  text-align: left;
  padding: 0.8em 1em 0.8em 1em;
  color: #999;
  cursor: pointer;
  font-family: sans-serif;

  &:hover {
    background: rgba(44, 130, 180, .1);
  }
}
