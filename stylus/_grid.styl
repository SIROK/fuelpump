/**
 * Grid
 *
 * @Example
 * <div class="row">
 *   <div class="col col-1-24">1 of 24</div>
 *   <div class="col col-23-24">23 of 24</div>
 * </div>
 *
 * @Demo
 * http://codepen.io/fuelpump/pen/MKPgmJ
 */
.row {
  display: flex;
  margin: -1em 0 1em -1em;
}

.col {
  flex: 1;
  padding: 1em 0 0 1em;
}

.col-1-24 {
  flex-basis: 4.1667%;
  max-width: 4.1667%;
}

.col-1-12,
.col-2-24 {
  flex-basis: 8.3333%;
  max-width: 8.3333%;
}

.col-1-8,
.col-3-24 {
  flex-basis: 12.5%;
  max-width: 12.5%;
}

.col-1-6,
.col-4-24 {
  flex-basis: 16.6667%;
  max-width: 16.6667%;
}

.col-1-5 {
  flex-basis: 20%;
  max-width: 20%;
}

.col-5-24 {
  flex-basis: 20.8333%;
  max-width: 20.8333%;
}

.col-1-4,
.col-6-24 {
  flex-basis: 25%;
  max-width: 25%;
}

.col-7-24 {
  flex-basis: 29.1667%;
  max-width: 29.1667%;
}

.col-1-3,
.col-8-24 {
  flex-basis: 33.3333%;
  max-width: 33.3333%;
}

.col-3-8,
.col-9-24 {
  flex-basis: 37.5%;
  max-width: 37.5%;
}

.col-2-5 {
  flex-basis: 40%;
  max-width: 40%;
}

.col-5-12,
.col-10-24 {
  flex-basis: 41.6667%;
  max-width: 41.6667%;
}

.col-11-24 {
  flex-basis: 45.8333%;
  max-width: 45.8333%;
}

.col-1-2,
.col-12-24 {
  flex-basis: 50%;
  max-width: 50%;
}

.col-13-24 {
  flex-basis: 54.1667%;
  max-width: 54.1667%;
}

.col-7-12,
.col-14-24 {
  flex-basis: 58.3333%;
  max-width: 58.3333%;
}

.col-3-5 {
  flex-basis: 60%;
  max-width: 60%;
}

.col-5-8,
.col-15-24 {
  flex-basis: 62.5%;
  max-width: 62.5%;
}

.col-2-3,
.col-16-24 {
  flex-basis: 66.6667%;
  max-width: 66.6667%;
}

.col-17-24 {
  flex-basis: 70.8333%;
  max-width: 70.8333%;
}

.col-3-4,
.col-18-24 {
  flex-basis: 75%;
  max-width: 75%;
}

.col-19-24 {
  flex-basis: 79.1667%;
  max-width: 79.1667%;
}

.col-4-5 {
  flex-basis: 80%;
  max-width: 80%;
}

.col-5-6,
.col-20-24 {
  flex-basis: 83.3333%;
  max-width: 83.3333%;
}

.col-7-8,
.col-21-24 {
  flex-basis: 87.5%;
  max-width: 87.5%;
}

.col-11-12,
.col-22-24 {
  flex-basis: 91.6667%;
  max-width: 91.6667%;
}

.col-23-24 {
  flex-basis: 95.8333%;
  max-width: 95.8333%;
}

.col-1,
.col-1-1,
.col-5-5,
.col-24-24 {
  flex-basis: 100%;
  max-width: 100%;
}
