  <ul am-pagination>
    <li class="active"><a href="#">1</a></li>
    <li><a href="#">2</a></li>
    <li><a href="#">3</a></li>
    <li><a href="#">4</a></li>
    <li><a href="#">5</a></li>
  </ul>
 *
 * Thanks to csswizardry.com/2011/09/the-nav-abstraction and http://codyhouse.co/gem/css-pagination/
 */
[am-pagination]
  // pagination navigation
  list-style: none
  margin-left: 0
  > li
    &,
      > a
        display: inline-block
        *display: inline
        zoom: 1

  // pagination
  > li
    margin: 0 .2em
    > a
      vertical-align: middle
      padding: 6px 14px
      border-radius: 0.25em
      border: 1px solid #e6e6e6
      color: black
      transition: background, color, border-color, animation-duration animation-timing-function
      &:hover
        background: #f2f2f2
        color: #fff
        border-color: #ddd

  // pagination active
  li.active a
    background: brand-color
    color: #fff
    border-color: #ddd
