[am-tabnav-tab]
  text-algin: center
  transition: background, box-shadow, color, 0.2s

  &:hover
    box-shadow: inset 0 4px brand-color
    background: #eee
    color: #3b372f

[am-tabnav-tab~="selected"]
  box-shadow: inset 0 4px brand-color
    border-color: brand-color
    background: white
    color: indigo

