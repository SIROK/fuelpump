/*------------------------------------*\
    $VARIABLES
\*------------------------------------*/





/*------------------------------------*\
    #BRAND
\*------------------------------------*/
brand-round = 3px
brand-color = #d69330




/*------------------------------------*\
    #FONTS
\*------------------------------------*/
font-medium   = 14px
font-small    = 13px
font-x-small  = 12px




/*------------------------------------*\
    #ANIMATION
\*------------------------------------*/
animation-duration        = .2s
animation-timing-function = linear





/*------------------------------------*\
    #DASHBOARD
\*------------------------------------*/





/*------------------------------------*\
    #CODE
\*------------------------------------*/
code-color      = #99cc99
code-background = #2d2d2d





/*------------------------------------*\
    #COLOR
\*------------------------------------*/
/**
 * Nomal Colors
 */
grey       = #EFF1F2
red        = #e94d32
blue       = #538EC2
indigo     = #34404c
white      = #f5f5f5


/**
 * Anchor
 */
color-link                     = #0086b3
color-link-hover               = #006080
color-link-background          = #fff


/**
 * Buttons
 */
// Default
color-default                  = #dde0e6
color-default-border           = darken(color-default, 20%)
color-default-hover            = #fff
color-default-hover-border     = #fff
color-default-hover-background = #fff

// Success
color-success                  = #5cb85c
color-success-border           = darken(color-success, 20%)
color-success-hover            = #fff
color-success-hover-border     = #fff
color-success-hover-background = #fff

// Waring
color-warning                  = #ec971f
color-warning-border           = darken(color-warning, 20%)
color-warning-hover            = #fff
color-success-hover-border     = #fff
color-warning-hover-background = #fff

// Danger
color-danger                   = #e94d32
color-danger-border            = darken(color-danger, 20%)
color-danger-hover             = #fff
color-success-hover-border     = #fff
color-danger-hover-background  = #fff


