/*------------------------------------*\
    $VARIABLES
\*------------------------------------*/





/*------------------------------------*\
    #BRAND
\*------------------------------------*/
@import url(http://fonts.googleapis.com/earlyaccess/notosansjapanese.css)
@import url(http://fonts.googleapis.com/css?family=Lato:300,400,700)

brand-round = 3px
brand-color = #d69330





/*------------------------------------*\
    #FONTS
\*------------------------------------*/
font-medium   = 14px
font-small    = 13px
font-x-small  = 12px




/*------------------------------------*\
    #ANIMATION
\*------------------------------------*/
animation-duration        = .5s
animation-timing-function = ease-in





/*------------------------------------*\
    #DASHBOARD
\*------------------------------------*/
dashboard-width = 210px





/*------------------------------------*\
    #COLOR
\*------------------------------------*/
/**
 * Nomal Colors
 */
grey       = #EFF1F2
red        = #e94d32
blue       = #538EC2
indigo     = #34404c
white      = #f5f5f5


/**
 * Anchor
 */
color-anchor                   = #0086b3
color-anchor-hover             = #006080
color-anchor-background        = #fff


/**
 * Buttons
 */
// Success
color-success                  = #fff
color-success-border           = darken(#fff, 20%)
color-success-hover            = #fff
color-success-hover-border     =
color-success-hover-background = #fff

// Waring
color-warning                  = red
color-warning-border           = darken(red, 20%)
color-warning-hover            = #fff
color-success-hover-border     =
color-warning-hover-background = #fff

// Danger
color-danger                   = #fff
color-danger-border            = darken(#fff, 20%)
color-danger-hover             = #fff
color-success-hover-border     =
color-danger-hover-background  = #fff


